pipeline {
    agent any

    stages {
        stage('Maven Build') {
            steps {
                script {
                    def mvnHome = tool 'Maven'
                    sh "${mvnHome}/bin/mvn clean install"

                    if (currentBuild.resultIsBetterOrEqualTo('SUCCESS')) {
                        echo 'Maven build successful!'
                    } else {
                        error 'Maven build failed!'
                    }
                }
            }
        }
    }
}
